        <dc:title>The Sealed Letter</dc:title>
        <dc:creator opf:file-as="Donoghue, Emma" opf:role="aut">Emma Donoghue</dc:creator>
        <dc:contributor opf:file-as="calibre" opf:role="bkp">calibre (0.7.35) [http://calibre-ebook.com]</dc:contributor>
